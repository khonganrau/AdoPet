<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Adoption_pet.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFA39C</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Navigation bar custom -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Adoption_pet.AppWidgetContainerParent" parent="Theme.MaterialComponents.DayNight">
        <item name="appWidgetRadius">8dp</item>
        <item name="appWidgetPadding">4dp</item>
        <item name="appWidgetInnerRadius">4dp</item>
    </style>


    <!-- Date picker custom-->
    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorControlActivated">@color/pink</item>
        <item name="android:textColorSecondary">@color/pink</item>
        <item name="colorAccent">@color/pink</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!--Radio button custom-->
    <style name="radiobutton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/pink</item>
    </style>
    <style name="Theme.Adoption_pet.AppWidgetContainer" parent="Theme.Adoption_pet.AppWidgetContainerParent" />
</resources>