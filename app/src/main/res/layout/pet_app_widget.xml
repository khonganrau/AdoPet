<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Adoption_pet.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/Theme.Adoption_pet.AppWidgetContainer">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="@dimen/logo_icon_width"
        android:layout_height="@dimen/logo_icon_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/layout_marginTop"
        android:elevation="@dimen/elevation"
        android:background="@drawable/bg_circle_red"
        android:src="@mipmap/ic_icon_app_foreground" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/appwidget_text"
        style="@style/Widget.Adoption_pet.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/appwidget_text"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:textStyle="bold|italic" />

</LinearLayout>